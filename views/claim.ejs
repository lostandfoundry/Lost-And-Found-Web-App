    <section id="claimpeep" class="section-padding">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="ser-title">Claim presence of an entity</h2>
                    <hr class="botm-line">
                </div>
                <div class="col-md-8 col-sm-8 marb20">
                    <div class="contact-info">
                        <h3 class="cnt-ttl"></h3>
                        <div class="space"></div>
                        <div id="sendmessage"></div>
                        <div id="errormessage"></div>
                        <form action="/claim/person/person" method="post" role="form" class="contactForm">
                            <div class="form-group">
                                <label>Name (if provided)
                                    <input type="text" name="name" class="form-control br-radius-zero" id="name"
                                        placeholder="Name of entity" data-rule="minlen:4"
                                        data-msg="Please enter at least 4 chars" /></label>
                                <div class="validation"></div>
                            </div>

                            <div class="form-group">
                                <label>Geo Location
                                    <input type="text" name="geo" class="form-control br-radius-zero" id="geo"
                                        placeholder="Your Location" data-rule="minlen:4"
                                        data-msg="Please enter at least 4 chars" /></label>
                                <div class="validation"></div>
                            </div>

                            <div class="form-group">
                                <label>Person Condition
                                    <input type="text" class="form-control br-radius-zero" name="condition"
                                        id="condition" placeholder="Person Condition" data-rule="minlen:4"
                                        data-msg="Please enter at least 8 characters" /></label>
                                <div class="validation"></div>
                            </div>

                            <div class="form-group">
                                <label>Custom Message (must include claimants' details)
                                    <textarea class="form-control br-radius-zero" name="custommsg" rows="5"
                                        id="custommsg" data-rule="required"
                                        data-msg="Please specify relevant information"
                                        placeholder="Please specify relevant information"></textarea></label>
                                <div class="validation"></div>

                            </div>
                            <div class="form-group">
                                <label>Iris Scan/Birthmark/Fingerprint Images
                                    <input type="file" name="pic" accept="image/*"></label>
                            </div>

                            <div class="form-action">
                                <button type="submit" class="btn btn-form">Claim</button><br><br>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
